" ================ Change Vim Options ================
" shell
set shell=/bin/bash
" indent
set shiftwidth=4
" tab
set tabstop=4
" space when entering tab
set expandtab
" no word wrapping
set textwidth=0
" auto indent :set paste cancel
set autoindent
" Search highlights
set hlsearch
" Registration to Clipboard
set clipboard=unnamed
" Syntax on
syntax on
" Set nomber
set number

" ================ Use Vim Plugins ================
call plug#begin()
call plug#end()
