#!/usr/bin/env bash
set -e

source "$HOME"/.dotfiles/lib/packages.sh

### infomation ###
if [ "$#" -eq 0 ]; then
    printf "%s\n" \
        "<< Error >> Enter your options."
    cat "$HOME"/.dotfiles/docs/infomation
    echo ""
    exit 1
fi

if [ "$1" = "-help" ]; then
    cat "$HOME"/.dotfiles/docs/infomation
    echo ""
fi

### setting bash ###
if [ "$1" = "-bash" ]; then
    if [ ! -h ~/.bashrc_origin ]; then
        ln -s ~/.dotfiles/config/bash/.bashrc_origin ~/.bashrc_origin
    fi

    if [ "$2" = "--checkout" ]; then
        rm ~/.bashrc_origin
    fi
fi

### setting nvim ###
if [ "$1" = "-nvim" ]; then
    STATUS=$(is_installed nvim)
    if [ "$STATUS" = 1 ]; then
        sudo apt update && sudo apt install neovim
    fi

    cd ~/.config/nvim/ 2>/dev/null
    if [ "$?" = 1 ]; then
        mkdir ~/.config/nvim
        cd ~/.config/nvim/
    fi

    if [ ! -h ~/.config/nvim/init.vim ]; then
        ln -s ~/.dotfiles/config/bash/.bashrc_origin ~/.bashrc_origin
    fi

    if [ "$2" = "--checkout" ]; then
        rm ~/.config/nvim/init.vim
    fi
fi

### setting tmux ###
if [ "$1" = "-tmux" ]; then
    STATUS=$(is_installed tmux)
    if [ "$STATUS" = 1 ]; then
        sudo apt update && sudo apt install tmux
    fi

    if [ ! -h ~/.tmux.conf ]; then
        ln -s ~/.dotfiles/config/tmux/.tmux.conf ~/.tmux.conf
    fi

    if [ "$2" = "--checkout" ]; then
        rm ~/.tmux.conf
    fi
fi
